<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>NSExtension</key>
	<dict>
		<key>NSExtensionPointIdentifier</key>
		<string>com.apple.widgetkit-extension</string>
	</dict>
    
    <key>NSExtensionAttributes</key>
        <dict>
            <key>IntentsSupported</key>
            <array>
                <string>ConfigurationLargeIntent</string>
                <string>ConfigurationLockscreenIntent</string>
                <string>ConfigurationMediumIntent</string>
                <string>ConfigurationSmallIntent</string>
            </array>
        </dict>

        <key>NSWidgetWantsLocation</key>
            <true/>
        <key>NSLocationUsageDescription</key>
            <string>The widget needs your location to show nearby transit stops</string>
        <key>NSLocationWhenInUseUsageDescription</key>
            <string>The widget needs your location to show nearby transit stops</string>


        <key>UIBackgroundModes</key>
        <array>
            <string>fetch</string>
            <string>location</string>
        </array>
        
        <key>CFBundleDisplayName</key>
        <string>Peek Transit</string>
        
        <key>UIAppFonts</key>
        <array>
            <string>Doto-VariableFont_ROND,wght.ttf</string>
            <string>Doto-Black.ttf</string>
            <string>Doto-SemiBold.ttf</string>
            <string>Doto-ExtraBold.ttf</string>
            <string>Doto_Rounded-Black.ttf</string>
            <string>LCDDot.ttf</string>
        </array>
</dict>
</plist>
